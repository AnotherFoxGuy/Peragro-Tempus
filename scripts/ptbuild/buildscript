	CAL3D_EXIT=0

	cd $psdir
	rm -r $psdir/cal3d

#        for (( i=1; i<=$CVS_TRIES; i++ )); do
             cvs -d$cal3d_login >> $install_dir/peragro_svn/ptbuild.log 2>&1
             # exit loop if successful
#             [ "$?" -eq "0" ] && break
#        done
        # "i" greater than $CVS_TRIES means $CVS_TRIES failed
#        if [ "$i" -gt "$CVS_TRIES" ]; then
#	CAL3D_EXIT=1
#	fi 

#        for (( i=1; i<=$CVS_TRIES; i++ )); do
	     cvs -z3 -d$cal3d_co >> $install_dir/peragro_svn/ptbuild.log 2>&1
