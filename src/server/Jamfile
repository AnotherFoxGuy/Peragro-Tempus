SubDir TOP src server ;

SubInclude TOP src server ai ;
SubInclude TOP src server colldet ;
SubInclude TOP src server database ;
SubInclude TOP src server entity ;
SubInclude TOP src server environment ;
SubInclude TOP src server network ;
SubInclude TOP src server combat ;
SubInclude TOP src server quest ;

Description server : "Server" ;
Application server : [ Wildcard *.h *.cpp ] : console ;

LinkWith server : server-network server-entity server-environment server-ai server-colldet sqlite_adp database quest tinyxml util server-combat ;

MsvcExternalLibrary server : "wsock32.lib" ;

if $(WSOCK32.LFLAGS) {
    LFlags server : $(WSOCK32.LFLAGS) ;
}

if [ Property build : projgen_version ] != 6
{
  SubVariant static ;
  
  Application server_static : [ Wildcard *.cpp *.h ] : independent noinstall console ;
  LinkWith server_static : server-network server-entity server-environment server-ai server-colldet sqlite_adp database quest tinyxml util ;
  MsvcExternalLibrary server_static : "wsock32.lib" ;
  if $(WSOCK32.LFLAGS) {
      LFlags server_static : $(WSOCK32.LFLAGS) ;
  }
  SubVariant ;
}
