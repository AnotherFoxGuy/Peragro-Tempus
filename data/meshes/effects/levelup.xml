<library>

	<plugins>
		<plugin name="emitFact">crystalspace.mesh.loader.factory.emit</plugin>
		<plugin name="emit">crystalspace.mesh.loader.emit</plugin>
	</plugins>
	
<textures>

	<texture name="spark">
		<file>/peragro/meshes/effects/spark.png</file>
		<alpha>
			<binary/>
		</alpha>
		<!--<transparent red="0" green="0" blue="0" />-->
	</texture>
	
</textures>

	<shaders>
		<shader>
			<file>/shader/particle_basic.xml</file>
		</shader>
	</shaders>

<materials>

	  <material name="spark">
	    <texture>spark</texture>
		<shader type="diffuse">particle_basic</shader>
	  </material>
	  
</materials>


	<meshfact name="levelupfact">
		<plugin>crystalspace.mesh.loader.factory.particles</plugin>
		<priority>alpha</priority>
		<ztest />
		<params>
			<material>spark</material>
			<particlesize x="0.01" y="0.01" />
			<mixmode>
				<add />
			</mixmode>
			<emitter type="cylinder">
				<duration>4</duration>
				<initialttl min="0.8" max="4.3" />
				<mass min="3" max="5.5" />
				<emissionrate>1000</emissionrate>
				<radius>0.6</radius>
				<extent x="0" y="0.2" z="0" />
				<placement>volume</placement>
			</emitter>
			<effector type="force">
				<acceleration x="0" y="25" z="0" />
			</effector>
			<effector type="lincolor">
				<color red="1" green="1" blue="1" time="1.3" />
				<color red="1" green="1" blue="1" time="1.15556" />
				<color red="0.9" green="0.9" blue="0.9" time="1.01111" />
				<color red="0.8" green="0.8" blue="0.8" time="0.866667" />
				<color red="0.6" green="0.6" blue="0.6" time="0.722222" />
				<color red="0.4" green="0.4" blue="0.4" time="0.577778" />
				<color red="0.2" green="0.2" blue="0.2" time="0.433333" />
				<color red="0" green="0" blue="0" time="0.288889" />
				<color red="0" green="0" blue="0" time="0.144444" />
			</effector>
		</params>
	</meshfact>



</library>
