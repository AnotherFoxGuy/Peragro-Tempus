<library>

<textures>

	<texture name="spark">
	  <file>/peragro/meshes/effects/spark.png</file>
		 <alpha>
		    <binary/>
		</alpha>
        </texture>
	
</textures>

	<shaders>
		<shader>
			<file>/shader/particle_basic.xml</file>
		</shader>
	</shaders>

<materials>

	  <material name="spark">
	    <texture>spark</texture>
		<shader type="ambient">particle_basic</shader>
	  </material>
	  
</materials>

<meshfact name='energyspherefact'>
    <plugin>crystalspace.mesh.loader.factory.particles</plugin>
	    <priority>alpha</priority>
	    <ztest />
	    <params>
		<material>spark</material>
		<particlesize x="0.03" y="0.03" />
		<sortmode>dot</sortmode>
		<mixmode>
		    <add />
		</mixmode>
		<emitter type="sphere">
		    <initialttl min="1" max="2" />
		    <mass min="1" max="1" />
		    <duration>5</duration>
		    <emissionrate>300</emissionrate>
		    <radius>1.2</radius>
		    <placement>surface</placement>
		</emitter>
		<effector type="force">
		    <acceleration x="0" y="0" z="0" />
		</effector>
		<effector type="lincolor">
		    <color red="0" green="0" blue="0.8" time="1" />
		    <color red="0" green="0" blue="0.8" time="0.5" />
		</effector>
        </params>
        
<key name="duration" value="8000" />
<key name="heightoffset" value="2.7" />	 
		 
  </meshfact>

</library>
