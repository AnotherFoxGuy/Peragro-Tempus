<message-implementation>
	<message type="Skill" name="SkillUsageStartRequest">
		<uint32>Caster</uint32>
		<uint32>Target</uint32>
		<uint16>Skill</uint16>
	</message>

	<message type="Skill" name="SkillUsageStartResponse">
		<uint32>Caster</uint32>
		<uint32>Target</uint32>
		<uint16>Skill</uint16>
		<uint16>MpCost</uint16>
		<string>Error</string> <!-- null if successful -->
	</message>

	<message type="Skill" name="SkillUsageStopRequest">
		<uint16>Skill</uint16>
	</message>

	<message type="Skill" name="SkillUsageCompletion">
		<uint32>Caster</uint32>
		<uint32>Target</uint32>
		<uint16>Skill</uint16>
	</message>

	<message type="Skill" name="SkillUsageInterrupt">
		<uint32>Caster</uint32>
		<uint32>Target</uint32>
		<uint16>Skill</uint16>
	</message>
</message-implementation>
