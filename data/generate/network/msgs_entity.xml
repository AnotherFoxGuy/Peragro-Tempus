<message-implementation>
	<message type="Entity" name="Add">
		<string>Name</string>
		<string>Mesh</string>
		<vector3f>Pos</vector3f>
		<string>Sector</string>
		<uint32>EntityId</uint32>
		<uint8>EntityType</uint8>
	</message>

	<message type="Entity" name="Remove">
		<uint32>EntityId</uint32>
	</message>

	<message type="Entity" name="Move">
		<vector3f>From</vector3f>
		<vector3f>To</vector3f>
		<float>Speed</float>
		<uint32>EntityId</uint32>
	</message>

	<message type="Entity" name="MoveRequest">
		<vector3f>To</vector3f>
	</message>

	<message type="Entity" name="PickRequest">
		<uint32>Target</uint32>
	</message>

	<message type="Entity" name="PickResponse">
		<string>Name</string>
		<uint32>ItemId</uint32>
		<string>Target</string>
		<string>Error</string> <!-- null if successful -->
	</message>

	<message type="Entity" name="DropRequest">
		<uint32>Target</uint32>
	</message>

	<message type="Entity" name="DropResponse">
		<string>Name</string>
		<string>Target</string>
		<string>Error</string> <!-- null if successful -->
	</message>

	<message type="Entity" name="InventoryList">
		<list name="Inventory">
			<uint16>Id</uint16>
			<string>Name</string>
			<uint16>Amount</uint16>
		</list>
	</message>

	<message type="Entity" name="StatsList">
		<list name="Stats">
			<uint16>Id</uint16>
			<string>Name</string>
			<uint16>Level</uint16>
		</list>
	</message>

	<message type="Entity" name="StatsChange">
		<uint16>Id</uint16>
		<uint16>Level</uint16>
	</message>

	<message type="Entity" name="SkillsList">
		<list name="Skills">
			<uint16>Id</uint16>
			<string>Name</string>
		</list>
	</message>

	<message type="Entity" name="EquipRequest">
		<uint32>ItemId</uint32>
		<uint8>SlotId</uint8>
	</message>

	<message type="Entity" name="Equip">
		<uint32>EntityId</uint32>
		<uint32>ItemId</uint32>
		<uint8>SlotId</uint8>
		<string>Error</string> <!-- null if successful -->
	</message>

	<message type="Entity" name="AddCharacterEntity">
		<string>Name</string>
		<string>Mesh</string>
		<vector3f>Pos</vector3f>
		<uint32>haircolour</uint32>
		<uint32>skincolour</uint32>
		<uint32>decalcolour</uint32>
		<string>Sector</string>
		<uint32>EntityId</uint32>
		<uint8>EntityType</uint8>
	</message>
</message-implementation>
